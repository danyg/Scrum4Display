{
	"name": "Scrum4Display",
	"productName": "Scrum4Display",
	"version": "0.1.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/danyg/Scrum4Display.git"
	},
	"license": "MIT",
	"author": {
		"name": "Daniel Goberitz",
		"email": "dalgo86@gmail.com",
		"url": "https://es.linkedin.com/pub/daniel-goberitz/26/ab0/a16/en"
	},
	"scripts": {
		"install": "bower install",
		"start": "electron .",
		"build": "printf DISTRIBUTION > ./environment & electron-packager . --out=../dist --app-version=%npm_package_version% --prune --asar --overwrite --platform=win32 --arch=x64 & electron-packager . --out=../dist --app-version=%npm_package_version% --prune --asar --overwrite --platform=linux --arch=x64 & printf DEVEL > ./environment",
		"changelog": "git log --format=[%ai]%n%B | grep \"ADD:\\|MOD:\\|FIX:\\|RMV:\\|\\[\\|^$\""
	},
	"dependencies": {
		"body-parser": "^1.13.3",
		"cookie-parser": "^1.3.5",
		"express": "^4.13.3"
	},
	"devDependencies": {
		"devtron": "^1.1.0",
		"electron": "^1.4.8",
		"electron-packager": "^8.3.0",
		"jasmine": "^2.4.1",
		"mock-require": "^1.3.0",
		"sinon": "^1.17.5"
	},
	"build": {
		"appId": "dg.opensource.scrum4display",
		"asar": true,

		"win": {
			"publish": ["github"],
			"iconUrl": "./css/img/logo.png"
		},
		"linux": {
			"publish": ["github"],
			"target": [
				"tar.gz",
				"rpm",
				"deb"
			]
		},
		"publish": {
			"provider": "github",
			"repo": "https://github.com/danyg/Scrum4Display.git",
			"vPrefixedTagName": false
		}
	}
}